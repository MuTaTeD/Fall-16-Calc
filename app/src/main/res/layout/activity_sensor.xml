<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pk.edu.ucp.fall16_mad_c.SensorActivity">

    <TextView
        android:id="@+id/x_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Raw X"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/y_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/x_value_label"
        android:padding="5dp"
        android:text="Raw Y"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/z_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/y_value_label"
        android:padding="5dp"
        android:text="Raw Z"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/x_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/x_value_label"
        android:padding="5dp"
        android:textSize="24sp"
        android:text="0.0"/>

    <TextView
        android:id="@+id/y_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x_value_view"
        android:layout_toRightOf="@+id/y_value_label"
        android:padding="5dp"
        android:textSize="24sp"
        android:text="0.0"/>

    <TextView
        android:id="@+id/z_value_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_value_view"
        android:layout_toRightOf="@+id/z_value_label"
        android:padding="5dp"
        android:textSize="24sp"
        android:text="0.0"/>

</RelativeLayout>
